<div>
<label for="">Title</label>
<input type="text" name="title" id="" value="<%= book.title %>"> 
</div>
<div>
    <label for="">Author</label>
    <select name="author" id="">
    <% authors.forEach(author => { %> 
        <% if (author.id == book.author) {%>
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
        <% } %> 
    <% }) %> 
    </select>
</div>
<div>
    <label for="">Publish Date</label>
    <input type="date" name="publishDate" id="" 
                    value="<%= book.publishDate == null ? '' : 
                    book.publishDate.toISOString().split('T')[0] %>"> 
</div>
<div>
    <label for="">Page Count</label>
    <input type="number" name="pageCount" id="" min="1" value="<%= book.pageCount %>"> 
</div>
<div>
    <label for="">Cover</label>
    <input type="file" name="cover" id=""> 
</div>
<div>
    <label for="">Desciption</label>
    <textarea name="description" id="" cols="20" rows="5"><%= book.description %></textarea>
</div>